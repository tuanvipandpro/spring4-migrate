<jboss-deployment-structure xmlns="urn:jboss:deployment-structure:1.2">
    <deployment>
        <!-- Exclude JBoss's implicit Hibernate and JSF to use our own bundled versions -->
        <exclude-subsystems>
            <subsystem name="jsf"/>
        </exclude-subsystems>
        <exclusions>
            <module name="org.hibernate" />
            <module name="org.slf4j" />
        </exclusions>
    </deployment>
</jboss-deployment-structure>
